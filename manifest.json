{
    "manifest_version": 2,
    "name": "Session Monitor",
    "description": "This extension will monitor chrome's session",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background":{
        "scripts": ["vendors/jquery/jquery-3.2.1.min.js", "vendors/idb/idb.js", "background.js"]
    },

    "permissions": [
        "tabs",
        "debugger",
        "storage",
        "webRequest",
        "webNavigation",
        "webRequestBlocking",
        "<all_urls>"
    ]
}